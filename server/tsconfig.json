{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "Node16",
		"lib": [
			"ES2023"
		],
		"sourceMap": true,
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"src/**/*.graphql"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
