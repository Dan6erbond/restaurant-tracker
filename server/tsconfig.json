{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "build",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "CommonJS",
		"lib": [
			"es2017",
			"dom"
		],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": [
			"node"
		],
		"noImplicitAny": false,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
